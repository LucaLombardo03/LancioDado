        <TextBox Name="TxtRisultato" HorizontalAlignment="Left" Height="45" Margin="240,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" IsReadOnly="True"/>

    </Grid>
</Window>
