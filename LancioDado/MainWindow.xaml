        <Image Name="dado" HorizontalAlignment="Left" Height="181" Margin="753,254,0,0" VerticalAlignment="Top" Width="194" RenderTransformOrigin="0.812,0.53"/>
        <Label Content="Vincita: +40&#xD;&#xA;Peridita -10" HorizontalAlignment="Left" Height="50" Margin="80,313,0,0" VerticalAlignment="Top" Width="110" FontSize="16" FontFamily="Showcard Gothic"/>
        <Image Margin="80,10,751,377" Source="download.jpg" Stretch="Fill"/>
        <Image Margin="770,10,44,358" Source="fiches-png-5.png" Stretch="Fill"/>

    </Grid>
</Window>
